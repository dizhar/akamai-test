{
  "name": "puppeteer-api-examples",
  "version": "1.0.1",
  "description": "Provides examples of how to use the puppeteer api. Tests executed against http://the-internet.herokuapp.com.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --timeout 30000 --reporter mochawesome lib/index.js",
    "lint": "tslint --fix src/**/*.ts",
    "moveJsonFiles": "copyfiles -u 1 src/selectors/* src/config/* src/files/* lib",
    "build": "npm run lint && rimraf lib && npm run moveJsonFiles && tsc --outDir lib",
    "testlocal": "npm run build && npm run test"
  },
  "pre-commit": [
    "lint",
    "build",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdavis61/puppeteer-api-examples.git"
  },
  "author": "James Davis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jdavis61/puppeteer-api-examples/issues"
  },
  "homepage": "https://github.com/jdavis61/puppeteer-api-examples#readme",
  "dependencies": {
    "puppeteer": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.5.2",
    "@types/puppeteer": "^2.0.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.2.0",
    "it-each": "^0.4.0",
    "mocha": "^7.0.1",
    "mochawesome": "^4.1.0",
    "pre-commit": "latest",
    "puppeteer-debug": "^1.0.1",
    "rimraf": "^3.0.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.7.5"
  }
}
